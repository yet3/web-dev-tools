---
import ReferenceLine from "@common/ReferenceLine.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="~xs/sm:~min-h-16/24 mb-8 flex flex-col">
  <div class="flex items-center flex-1">
    <h1 class="~xs/sm:~text-2xl/4xl font-medium">{title}</h1>
  </div>

  <ReferenceLine opacity={0.75} />
</header>
