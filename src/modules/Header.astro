---
import ReferenceLine from "@common/ReferenceLine.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="min-h-16 sm:min-h-header mb-8 flex flex-col">
  <div class="flex items-center flex-1">
    <h1 class="text-2xl xs:text-3xl sm:text-4xl font-medium">{title}</h1>
  </div>

  <ReferenceLine opacity={0.75} />
</header>
